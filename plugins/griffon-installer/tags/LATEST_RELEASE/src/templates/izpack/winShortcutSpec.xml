<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<shortcuts>
  <skipIfNotSupported/>

  <programGroup defaultName="$appGroup"
                location="applications"/>

  <shortcut
    name="@app.name@"
    target="$INSTALL_PATH\bin\@app.name@.bat"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Run @app.name@"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    iconFile="$INSTALL_PATH\icons\griffon-icon-32x32.png"
    applications="yes"
    startMenu="no"
    startup="no">
  </shortcut>

  <shortcut
    name="Uninstall"
    target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Uninstall @app.name@"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">
  </shortcut>

</shortcuts>